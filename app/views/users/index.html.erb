<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Name</th>
    <th>Company</th>
    <th>Bio</th>
    <th>Id git</th>
    <th>Email git</th>
    <th>Url git</th>
    <th>Created</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.name %></td>
    <td><%= user.company %></td>
    <td><%= user.bio %></td>
    <td><%= user.id_git %></td>
    <td><%= user.email_git %></td>
    <td><%= user.url_git %></td>
    <td><%= user.created %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

