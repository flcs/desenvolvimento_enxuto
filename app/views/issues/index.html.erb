<h1>Listing issues</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Number</th>
    <th>Milestone</th>
    <th>State</th>
    <th>Created</th>
    <th>Closed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.title %></td>
    <td><%= issue.body %></td>
    <td><%= issue.number %></td>
    <td><%= issue.milestone %></td>
    <td><%= issue.state %></td>
    <td><%= issue.created %></td>
    <td><%= issue.closed %></td>
    <td><%= link_to 'Show', issue %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', issue, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path %>
